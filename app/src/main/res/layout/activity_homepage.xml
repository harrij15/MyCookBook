<?xml version="1.0" encoding="utf-8"?>

<!-- HOMEPAGE LAYOUT -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/White">

    <!-- Dropdown menu -->
    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:spinnerMode="dropdown"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@color/Grey"
        android:contextClickable="true" />

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="2"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="25dp"
        android:id="@+id/gridView2"
        android:layout_below="@+id/spinner"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <SearchView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/HomepageSearchView"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorGreen" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            android:width="111dp"
            android:id="@+id/homepageButton1"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/HomepageSearchView"
            android:background="@color/Orange" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            android:width="111dp"
            android:id="@+id/homepageButton2"
            android:layout_alignBottom="@+id/homepageButton1"
            android:layout_toEndOf="@+id/homepageButton1"
            android:background="@color/Orange2" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            android:width="112dp"
            android:id="@+id/homepageButton3"
            android:layout_alignBottom="@+id/homepageButton2"
            android:layout_toEndOf="@+id/homepageButton2"
            android:background="@color/Orange" />

    </RelativeLayout>

</RelativeLayout>