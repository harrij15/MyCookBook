<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="sm.SelectPreferencesActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Are you on a particular diet?"
        android:id="@+id/dietTextView"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <CheckedTextView
        android:id="@+id/VegetarianCheck"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:checkMark="?android:attr/listChoiceIndicatorSingle"
        android:clickable="true"
        android:checked="false"
        android:gravity="center"
        android:text="Vegetarian"
        android:layout_marginTop="30dp"
        android:textSize="20dip"
        android:textIsSelectable="true"
        android:layout_below="@+id/dietTextView"
        android:layout_alignParentStart="true" />

    <CheckedTextView
        android:id="@+id/VeganCheck"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:checkMark="?android:attr/listChoiceIndicatorSingle"
        android:clickable="true"
        android:checked="false"
        android:gravity="center"
        android:text="Vegan"
        android:layout_below="@id/VegetarianCheck"
        android:textSize="20dip" />

    <CheckedTextView
        android:id="@+id/PescCheck"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:checkMark="?android:attr/listChoiceIndicatorSingle"
        android:clickable="true"
        android:checked="false"
        android:gravity="center"
        android:text="Pescetarian"
        android:layout_below="@id/VeganCheck"
        android:textSize="20dip" />

    <CheckedTextView
        android:id="@+id/LactoCheck"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:checkMark="?android:attr/listChoiceIndicatorSingle"
        android:clickable="true"
        android:checked="false"
        android:gravity="center"
        android:text="Lacto-Vegetarian"
        android:layout_below="@id/PescCheck"
        android:textSize="20dip"
        android:textIsSelectable="false" />

    <CheckedTextView
        android:id="@+id/OvoCheck"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:checkMark="?android:attr/listChoiceIndicatorSingle"
        android:clickable="true"
        android:checked="false"
        android:gravity="center"
        android:text="Ovo-Vegetarian"
        android:layout_below="@id/LactoCheck"
        android:textSize="20dip" />

    <CheckedTextView
        android:id="@+id/PaleoCheck"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:checkMark="?android:attr/listChoiceIndicatorSingle"
        android:clickable="true"
        android:checked="false"
        android:gravity="center"
        android:text="Paleolithic"
        android:layout_below="@id/OvoCheck"
        android:textSize="20dip" />

    <CheckedTextView
        android:id="@+id/NotSureCheck"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:checkMark="?android:attr/listChoiceIndicatorSingle"
        android:clickable="true"
        android:checked="false"
        android:gravity="center"
        android:text="Not Sure"
        android:layout_below="@id/PaleoCheck"
        android:textSize="20dip" />

    <CheckedTextView
        android:id="@+id/NoneCheck"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:checkMark="?android:attr/listChoiceIndicatorSingle"
        android:clickable="true"
        android:checked="false"
        android:gravity="center"
        android:text="None"
        android:layout_below="@id/NotSureCheck"
        android:textSize="20dip" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submitPref"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@color/Orange"/>


</RelativeLayout>
